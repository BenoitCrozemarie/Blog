{% extends 'base.html.twig' %}

{% block title %}List articles{% endblock %}

{% block body %}
    <h1>Articles</h1>

    {% for article in articles %}
        <div class="card">
            <h3><a href="{{ path('visitor_article_id', {id : article.id}) }}">{{ article.title }}</a></h3>
            <p><sub>{{ article.comments|length }} comments</sub></p>
        </div>
    {% endfor %}
{% endblock %}